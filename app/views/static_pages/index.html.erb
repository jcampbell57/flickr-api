<h1>Flickr Finder</h1>

<%= form_with url: "/", method: :get do |form| %>
  <%= form.label :flickr_id, "Flickr ID:" %>
  <%= form.text_field :flickr_id %>
  <%= form.submit "Retrieve Photos" %>
<% end %>

<% if params[:flickr_id] %>
  <h4><%= params[:flickr_id] %>'s photos:</h4>
<% else %>
  <h4>Recent Flickr photos:</h4>
<% end %>

<% @photos.each do |photo| %>
  <%= link_to(image_tag(Flickr.url(photo)), Flickr.url_photopage(photo)) %>
<% end %>